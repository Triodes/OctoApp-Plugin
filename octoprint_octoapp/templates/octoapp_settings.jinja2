<form class="form-horizontal">
	<h4>{{ _("OctoApp Companion") }}</h4>
	<div class="control-group">
	  <p>{{ _("OctoApp will automatically detect this plugin!") }}</p>
		<p>{{ _("This plugin version requires OctoApp 1.11 or newer") }}</p>
	</div>
	<div class="control-group">
		<p>{{ _("Get OctoApp on ") }}<a href="https://play.google.com/store/apps/details?id=de.crysxd.octoapp&hl=en&gl=US">{{ _("Google Play!") }}</a></p>
		<a href="https://play.google.com/store/apps/details?id=de.crysxd.octoapp&hl=en&gl=US">
			<img src="https://github.com/crysxd/OctoApp-Plugin/raw/master/images/google_play.png"/>
		</a>
	</div>
	<div class="control-group">
		<h4>{{ _("Connected devices") }}</h4>
		<p>{{ _("Devices are automatically disconnected when the app is uninstalled. Using the app automatically connects a device.") }}</p>
		<table data-bind="" class="table table-striped">
				<thead>
				<tr>
					<th>Device</th>
					<th>Last seen</th>
				</tr>
				</thead>
				<tbody>
				<!-- ko foreach: settings.plugins.octoapp.registeredApps -->
		        <tr>
							<td><span data-bind="text: $data.displayName"></span></td>
							<td><span data-bind="text: moment(parseFloat(ko.utils.unwrapObservable($data.lastSeenAt)) * 1000).format('LLL')"></span></td>
						</tr>
		    <!-- /ko -->
				</tbody>
		</table>
	</div>
</form>
